<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:ProgressWheel="http://schemas.android.com/apk/res-auto/com.todddavies.components.progressbar"
        android:id="@+id/mainView">


    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#ffffff"
            android:clickable="false">

        <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/imageView2" android:src="@drawable/pizzahut"
                android:contentDescription="@string/image_description" android:cropToPadding="false"
                android:scaleType="centerCrop"
                android:adjustViewBounds="false"/>

        <com.b5n.pizzashake.ProgressWheel
                android:id="@+id/pw_spinner"
                android:layout_width="200dp"
                android:layout_height="200dp"
                ProgressWheel:text="0%"
                ProgressWheel:textColor="#222"
                ProgressWheel:textSize="14sp"
                ProgressWheel:rimColor="#330097D6"
                ProgressWheel:barLength="60dp"
                ProgressWheel:barColor="#0097D6"
                ProgressWheel:barWidth="5dp"
                ProgressWheel:rimWidth="2dp"
                android:visibility="invisible"
                android:layout_centerInParent="true"/>
    </RelativeLayout>

</LinearLayout>